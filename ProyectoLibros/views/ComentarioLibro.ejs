<%- include header/headerFront.ejs%>

    <section id="blog" class="container">
        <div class="center">
            <h2><%= titulo %></h2>
            <% for(var i=0; i < comentarios.length; i++){ %>
                <div class="media comment_section">
                    <div class="pull-left post_comments">
                        <a href="#"><img src="../images/blog/avatar3.png" class="img-circle" alt="" /></a>
                    </div>
                    <div class="media-body post_reply_comments">
                        <h2><%= comentarios[i].nombre_autor %></h2>
                        <h4><%= comentarios[i].fecha %></h4>
                        <p><%= comentarios[i].comentario %></p>
                        
                    </div>
                </div> 
            <% }%>
        </div>

        <div class="blog">
            <div class="row">
                <div class="col-md-8">
                    
                    <div id="contact-page clearfix">
                        <div class="status alert alert-success" style="display: none"></div>
                        <div class="message_heading">
                            <h4>Deja tu comentario</h4>
                            <p>Asegurate de llenar los campos obligatorios</p>
                        </div> 
      
                        <form  name="contact-form" method="post" action="/agregarComentario" role="form">
                            <input type="hidden" name="id" value="<%= id %>">
                            <div class="row">
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>Nombre *</label>
                                        <input type="text" name="nombre" id="nombre" class="form-control" required="required">
                                    </div>
                                    <div class="form-group">
                                        <label>Email *</label>
                                        <input type="email" name="email" id="email" class="form-control" required="required">
                                    </div>                  
                                </div>
                                <div class="col-sm-7">                        
                                    <div class="form-group">
                                        <label>Mensaje *</label>
                                        <textarea name="comentario" id="comentario" required="required" class="form-control" rows="8"></textarea>
                                    </div>                        
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg" required="required">Enviar comentario</button>
                                    </div>
                                </div>
                            </div>
                        </form>   

                    </div><!--/#contact-page-->
                </div><!--/.col-md-8-->
            </div><!--/.row-->
         </div><!--/.blog-->
    </section><!--/#blog-->


<%- include footer/footerFront.ejs%>
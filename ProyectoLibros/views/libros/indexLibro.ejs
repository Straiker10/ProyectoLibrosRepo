<%- include ../header/headerBack.ejs%>

<div class="page-wrapper">
    <div class="page-container">
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">

                            <i></i><a class="btn btn-xs btn-primary" href="/libros/crearLibro">Nuevo Libro</a>
                            <div class="row">
                                <div class="col-md-4"></div>
                                <div class="col-md-4"></div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" name="buscar" id="buscar" placeholder="Buscar" class="form-control" >
                                            <div class="input-group-addon">
                                                <i class="fa fa-dollar"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- DATA TABLE -->
                            <div class="table-responsive table-responsive-data2">
                                <table id="myTable" class="table table-data2">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Descripcion</th>
                                            <th>Autor</th>
                                            <th>Precio</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <% for(var i=0; i < libros.length; i++){ %>
                                            
                                            <tr class="spacer tr-shadow" id='row<%= libros[i].id_libro %>'>
                                                <td><%= libros[i].nombre %></td>
                                                <td><%= libros[i].descripcion %></td>
                                                <td><%= libros[i].autor %></td>
                                                <td><%= libros[i].precio %></td>
                                                <% if(libros[i].status == 1){ %>
                                                    <td>Disponible</td>
                                                <% } else{ %>  
                                                    <td>No disponible</td>
                                                <% } %>
                                    
                                                <td></td>
                
                                                <!--seccion botones-->
                                                <td>
                                                   
                                                    <a class="btn btn-xs btn-success" href='/libros/modificarLibro/<%= libros[i].id_libro %>'>Editar</a>
                                                   
                                                </td>
                                                <td>
                                                    <button onclick="eliminarLibro('<%= libros[i].id_libro %>');"  class="btn  btn-xs btn-danger">Eliminar</button>
                                                </td>
                                            </tr>
                                            <tr class="spacer"  id='row2<%= libros[i].id_libro %>'></tr>
                                        <% }%>
                                    </tbody>
                                </table>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JS para eliminar libro-->
<script>
    // do Filter on View
	$("#buscar").on("keyup", function() {
	    var inputValue = $(this).val().toLowerCase();
	    $("#myTable tr").filter(function() {
	    	$(this).toggle($(this).text().toLowerCase().indexOf(inputValue) > -1)
	    });
	});
</script>
<script src="../javascripts/libros.js"></script>
<%- include ../footer/footerBack.ejs%>